{
  "name": "unity-toolbox",
  "version": "2.0.0",
  "publisher": "pixl",
  "displayName": "Unity Toolbox",
  "description": "A set of tools for VSCode & Unity",
  "license": "SEE LICENSE IN LICENSE",
  "icon": "feather/icon.png",
  "repository": {
    "type": "git",
    "url": "https://github.com/pixldev/Unity-Toolbox.git"
  },
  "bugs": {
    "url": "https://github.com/pixldev/Unity-Toolbox/issues"
  },
  "keywords": [
    "unity",
    "unity3d",
    "gamedev",
    "c#",
    "csharp"
  ],
  "engines": {
    "vscode": "^1.70.0"
  },
  "categories": [
    "Snippets",
    "Programming Languages"
  ],
  "activationEvents": [
    "onLanguage:csharp"
  ],
  "main": "./out/extension",
  "contributes": {
    "snippets": [
      {
        "language": "csharp",
        "path": "./src/other-snippets.json"
      }
    ],
    "configuration": {
      "title": "Unity Toolbox",
      "properties": {
        "unityToolbox.codeSnippets.bracketsStyle": {
          "enum": [
            "new line",
            "same line, with space",
            "same line, without space"
          ],
          "default": "new line",
          "description": "Changes how the first curly bracket is inserted in snippets."
        },
        "unityToolbox.codeSnippets.requiredClass": {
          "enum": [
            "MonoBehaviour or NetworkBehaviour",
            "any derived class",
            "any class"
          ],
          "default": "MonoBehaviour or NetworkBehaviour",
          "description": "Enable code snippets in ..."
        },
        "unityToolbox.codeLens.requiredClass": {
          "enum": [
            "MonoBehaviour or NetworkBehaviour",
            "any derived class",
            "any class"
          ],
          "default": "MonoBehaviour or NetworkBehaviour",
          "description": "Enable codeLens in ..."
        },
        "unityToolbox.hover.requiredClass": {
          "enum": [
            "MonoBehaviour or NetworkBehaviour",
            "any derived class",
            "any class"
          ],
          "default": "MonoBehaviour or NetworkBehaviour",
          "description": "Enable hover in ..."
        }
      }
    },
    "menus": {
      "editor/context": [
        {
          "command": "unityToolbox.searchInUnityDocumentation",
          "when": "editorHasSelection == true",
          "group": "Unity Toolbox"
        }
      ],
      "commandPalette": [
        {
          "command": "unityToolbox.searchInUnityDocumentation",
          "when": "false"
        }
      ]
    },
    "commands": [
      {
        "command": "unityToolbox.searchInUnityDocumentation",
        "title": "Search In Unity Documentation"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./"
  },
  "devDependencies": {
    "@types/glob": "^7.2.0",
    "@types/mocha": "^9.1.1",
    "@types/node": "^18.6.4",
    "@types/vscode": "^1.69.1",
    "@vscode/test-electron": "^2.1.5",
    "glob": "^8.0.3",
    "mocha": "^10.0.0",
    "typescript": "^4.7.4"
  }
}
